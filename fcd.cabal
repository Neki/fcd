build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable fcd
  main-is:             Main.hs
  build-depends:       base, fcd
  hs-source-dirs:      src-exec
  default-language:    Haskell2010

library
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >= 4.6 && < 5 , array, vty, vty-ui >= 1.7.1 && < 2, unix, directory, text, process >= 1.2.0.0, async >= 2.0
  exposed-modules:     Fcd
  other-modules:       Paths_fcd

test-suite test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Tests.hs
  build-depends:
    base >= 4.6 && < 5
    , tasty
    , tasty-hunit >= 0.9
    , fcd
